<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/layout_Esquerda_ListView_Main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="2.5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_Esquerda_ListView_Main"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/semimagem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="140dp"
            android:background="@color/colorPrimaryMain"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/textView_produtoEsquerda_ListView_Main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="teste"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView_precoEsquerda_ListView_Main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="teste"
                android:textColor="@color/colorAccent"
                android:textSize="25dp" />

        </LinearLayout>

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_Direita_ListView_Main"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="2.5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/imageView_Direita_ListView_Main"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/semimagem" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="140dp"
            android:background="@color/colorPrimaryMain"
            android:orientation="vertical"
            android:paddingLeft="5dp">

            <TextView
                android:id="@+id/textView_produtoDireita_ListView_Main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="teste"
                android:textColor="@color/colorAccent"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/textView_precoDireita_ListView_Main"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="teste"
                android:textColor="@color/colorAccent"
                android:textSize="25dp" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>