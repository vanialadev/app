<resources>

    <style name="Theme.MyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="Theme.MyTheme.Login"  parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textColorHint">#ffffff</item>
    </style>

    <style name="RatingBarTheme_MyTheme" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/theme_mytheme_ratingbar_full_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/theme_mytheme_ratingbar_full_holo_light</item>
    </style>

    <style name="RatingBarTheme_MyTheme_Product" parent="android:Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/theme_mytheme_ratingbar_full_holo_light</item>
    </style>




</resources>
